generator client {
  provider        = "prisma-client-js"
  output          = "./generated/prisma"
  previewFeatures = ["fullTextSearchPostgres"]
}

datasource db {
  provider  = "postgresql"
  url       = env("PRISMA_DATABASE_URL")
  directUrl = env("PRISMA_DIRECT_URL")
}

model User {
  id           Int            @id @default(autoincrement())
  email        String         @unique
  first_name   String?
  last_name    String?
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  avatar       String?
  password     String
  Notification Notification[]
  Store        Store[]
  Account      Account[]
  Product      Product[]
  Order        Order[]
  ActionLog    ActionLog[]

  @@map("users")
}

model Notification {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  user_id    Int
  user       User     @relation(fields: [user_id], references: [id])
  type       String
  read       Boolean  @default(false)
  title      String
  message    String
  link       String?

  @@map("notifications")
}

model Store {
  id Int @id @default(autoincrement())

  name        String
  description String?
  logo        String?
  slogan      String?

  slug      String @unique
  subdomain String @unique

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  branches     Branch[]
  products     Product[]
  orders       Order[]
  balance      StoreBalance?
  transactions Transaction[]

  @@map("stores")
}

model Account {
  id         Int      @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  type AccountType @default(FREE)

  @@map("accounts")
}

enum AccountType {
  FREE
  PRO
  ENTERPRISE
}

model Product {
  id          Int     @id @default(autoincrement())
  name        String
  description String?

  price Float
  stock Int

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  stock_entries ProductStock[]
  store_id      Int
  store         Store          @relation(fields: [store_id], references: [id])

  categories Category[]
  tags       String[]

  image String?
  video String?

  owner_id Int
  owner    User @relation(fields: [owner_id], references: [id])

  slug    String  @unique
  sku     String  @unique
  barcode String?

  is_active    Boolean @default(true)
  is_featured  Boolean @default(false)
  is_published Boolean @default(false)

  order_items OrderItem[]

  @@map("products")
}

model Branch {
  id          Int     @id @default(autoincrement())
  name        String
  description String?

  address String?
  phone   String?
  email   String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  store_id Int
  store    Store @relation(fields: [store_id], references: [id])

  stock ProductStock[]

  orders Order[]

  @@map("branches")
}

model ProductStock {
  quantity Int

  product_id Int
  product    Product @relation(fields: [product_id], references: [id], onDelete: Cascade)

  branch_id Int
  branch    Branch @relation(fields: [branch_id], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([product_id, branch_id])
  @@map("product_stocks")
}

model Category {
  id   Int    @id @default(autoincrement())
  name String

  description String?
  image       String?
  slug        String  @unique

  products Product[]

  @@map("categories")
}

model Order {
  id Int @id @default(autoincrement())

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user_id Int
  user    User @relation(fields: [user_id], references: [id])

  store_id Int
  store    Store @relation(fields: [store_id], references: [id])

  branch_id Int
  branch    Branch @relation(fields: [branch_id], references: [id])

  items OrderItem[]

  total_price    Float
  total_quantity Int

  shipping_method String      @default("pickup")
  status          OrderStatus @default(PENDING)

  payment OrderPayment?

  // Campos adicionales para el sistema de balance
  is_paid      Boolean   @default(false)
  payment_date DateTime?

  @@map("orders")
}

model OrderItem {
  id Int @id @default(autoincrement())

  order_id Int
  order    Order @relation(fields: [order_id], references: [id])

  product_id Int
  product    Product @relation(fields: [product_id], references: [id])

  quantity Int
  price    Float

  @@map("order_items")
}

enum OrderStatus {
  PENDING
  PROCESSING
  READY
  SHIPPED
  DELIVERED
  CANCELLED
}

model OrderPayment {
  id Int @id @default(autoincrement())

  order_id Int   @unique
  order    Order @relation(fields: [order_id], references: [id])

  amount Float
  status OrderPaymentStatus @default(PENDING)

  @@map("order_payments")
}

enum OrderPaymentStatus {
  PENDING
  PAID
}

// Nuevos modelos para el sistema de balance

model StoreBalance {
  id Int @id @default(autoincrement())

  store_id Int   @unique
  store    Store @relation(fields: [store_id], references: [id], onDelete: Cascade)

  current_balance Float @default(0)

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("store_balances")
}

model Transaction {
  id Int @id @default(autoincrement())

  store_id Int
  store    Store @relation(fields: [store_id], references: [id], onDelete: Cascade)

  type           TransactionType
  amount         Float
  balance_before Float
  balance_after  Float

  description    String
  reference_type String? // "order", "refund", "manual", "service", etc.
  reference_id   Int? // ID de la orden, reembolso, etc.

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  // Campos adicionales para más contexto
  notes      String?
  created_by Int? // user_id que creó la transacción
  branch_id  Int? // si la transacción está relacionada a una sucursal específica

  @@map("transactions")
}

enum TransactionType {
  SALE // Venta de producto
  REFUND // Reembolso/Devolución
  MANUAL_INCOME // Ingreso manual a caja
  MANUAL_EXPENSE // Egreso manual de caja
  SERVICE_INCOME // Ingreso por servicio
  SERVICE_REFUND // Reembolso de servicio
  ADJUSTMENT // Ajuste de balance
  WITHDRAWAL // Extracción de caja
  DEPOSIT // Depósito a caja
}

model ActionLog {
  id Int @id @default(autoincrement())

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user_id Int?
  user    User? @relation(fields: [user_id], references: [id])

  action           ActionType
  entity_type      EntityType
  entity_id        Int
  details          String?
  action_initiator String?

  @@map("action_logs")
}

enum ActionType {
  CREATE
  UPDATE
  DELETE
  LOGIN
  LOGOUT
}

enum EntityType {
  USER
  STORE
  PRODUCT
  ORDER
  BRANCH
  CATEGORY
  TAG
  STOCK
  TRANSACTION
  EMPLOYEE
  SETTINGS
}
